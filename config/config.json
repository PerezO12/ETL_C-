{
  "database": {
    "host": "localhost",
    "dbname": "postgres",
    "user": "postgres",
    "password": "123456",
    "port": "5454"
  },
  "globalOptions": {
    "truncateBeforeLoad": true,
    "batchSize": 1000,
    "logLevel": "DEBUG",
    "loadOrder": ["profesores", "asignaturas", "alumnos"]
  },
  "dataSource": {
    "filePath": "../data/datos.json",
    "rootPath": "universidad"
  },
  "tables": {
    "alumnos": {
      "sourcePath": "alumnos",
      "generatedId": true,
      "naturalKey": ["nombre", "apellido"],
      "columns": [
        { 
          "name": "nombre", 
          "jsonPath": "nombre", 
          "type": "varchar" 
        },
        { 
          "name": "apellido", 
          "jsonPath": "apellido", 
          "type": "varchar" 
        },
        { 
          "name": "sexo", 
          "jsonPath": "sexo", 
          "type": "varchar" 
        },
        { 
          "name": "edad", 
          "jsonPath": "edad", 
          "type": "int" 
        }
      ]
    },
    "asignaturas": {
      "sourcePath": "asignaturas",
      "generatedId": true,
      "naturalKey": ["nombre"],
      "transform": "trim_uppercase",
      "columns": [
        { 
          "name": "nombre", 
          "jsonPath": "nombre", 
          "type": "varchar" 
        },
        { 
          "name": "codigo", 
          "jsonPath": "codigo", 
          "type": "varchar"
        },
        { 
          "name": "profesor_id", 
          "jsonPath": "profesor", 
          "type": "int",
          "lookup": {
            "table": "profesores",
            "naturalKey": ["nombre", "apellido"],
            "transform": "split_by_space"
          }
        }
      ]
    },
    "profesores": {
      "sourcePath": "profesores",
      "generatedId": true,
      "naturalKey": ["nombre", "apellido"],
      "columns": [
        { 
          "name": "nombre", 
          "jsonPath": "nombre", 
          "type": "varchar" 
        },
        { 
          "name": "apellido", 
          "jsonPath": "apellido", 
          "type": "varchar" 
        },
        { 
          "name": "sexo", 
          "jsonPath": "sexo", 
          "type": "varchar" 
        },
        { 
          "name": "edad", 
          "jsonPath": "edad", 
          "type": "int" 
        },
        { 
          "name": "catedra", 
          "jsonPath": "catedra", 
          "type": "varchar" 
        },
        { 
          "name": "aulas", 
          "jsonPath": "aulas", 
          "type": "jsonb" 
        },
        { 
          "name": "cantidad_alumnos", 
          "jsonPath": "cantidad_alumnos", 
          "type": "int" 
        }
      ]
    }
  },
  "relationships": [
    {
      "type": "MANY_TO_MANY",
      "fromTable": "alumnos",
      "toTable": "asignaturas",
      "junctionTable": "alumno_asignatura",
      "columns": [
        {
          "name": "alumno_id",
          "source": {
            "table": "alumnos",
            "naturalKey": ["nombre", "apellido"]
          }
        },
        {
          "name": "asignatura_id",
          "source": {
            "table": "asignaturas",
            "naturalKey": ["codigo"]
          }
        },
        { 
          "name": "notas", 
          "jsonPath": "asignaturas[*].notas", 
          "type": "jsonb" 
        }
      ]
    }
  ],
  "transformations": { 
    "split_fullname": {
      "input": "string",
      "output": ["nombre", "apellido"],
      "logic": "split_by_space" 
    },
    "trim_uppercase": {
      "input": "string",
      "output": "string",
      "logic": "trim && uppercase"
    }
  },
  "options": {
    "strictMode": true, 
    "onMissingReference": "error", 
    "dateFormat": "YYYY-MM-DD"
  }
}